<!-- res/drawable/custom_checkbox.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Background color when checked -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/indigo_80" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- Check mark -->
            <item android:drawable="@drawable/ic_check"
                android:gravity="center" />
        </layer-list>
    </item>

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Background color when unchecked -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="3dp"
                    android:color="@color/indigo_80" />
<!--                    <solid android:color="@color/mainCardColor" />-->
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
